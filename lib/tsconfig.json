{
  "compileOnSave": true,
  "compilerOptions": {
    "outDir": "./dist",
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "declaration": true,
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2015", "dom"],
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
